<%= form_for(@task) do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details %>
  </div>

  <% if params[:action] == "edit"%>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
  <% end %>

  <%= f.submit %>
<% end %>
<%= link_to "Black to list", tasks_path %>

